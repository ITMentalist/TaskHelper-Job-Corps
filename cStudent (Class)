''''''''''''''''''''''''''''''
'AlphaName property (Read-only)
''''''''''''''''''''''''''''''
Public Property Get AlphaName() As String
    If Len(MidName) < 1 Then
        AlphaName = LastName & " " & FirstName
    Else
        AlphaName = LastName & " " & FirstName & " " & MidName
    End If
End Property

''''''''''''''''''''''''''''''
'FirstName property
''''''''''''''''''''''''''''''
Public Property Get FirstName() As String
    FirstName = pFirstName
End Property

Public Property Let FirstName(Value As String)
    pFirstName = Value
End Property

''''''''''''''''''''''''''''''
'MidName property
''''''''''''''''''''''''''''''
Public Property Get MidName() As String
    MidName = pMidName
