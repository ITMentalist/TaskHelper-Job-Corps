Private Sub Class1_Checkbox_Click()

    If Class1_Checkbox = True Then
        Mod1_Textbox.BackColor = RGB(255, 251, 204)
        Title1_Textbox.BackColor = RGB(255, 251, 204)
    Else
        Mod1_Textbox.BackColor = RGB(211, 211, 211)
        Title1_Textbox.BackColor = RGB(211, 211, 211)
    End If

End Sub

